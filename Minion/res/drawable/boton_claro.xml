<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#FFDDDDDD" />

            <stroke android:width="1dp" android:color="#FFCCCCCC" />

            <corners android:radius="4dp" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#FFEEEEEE" android:startColor="#FFFFFFFF" />

            <stroke android:width="1dp" android:color="#FFDDDDDD" />

            <corners android:radius="4dp" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape></item>

</selector>